<UserControl x:Class="TasksDK.View.Controls.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TasksDK.View.Controls" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             MinHeight="40"
             MinWidth="600" x:Name="currentTaskControl">
    <Button BorderBrush="Black">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Click">
                <i:InvokeCommandAction Command="{Binding Main.ViewTaskCommand, Source={StaticResource Locator}}" 
                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=Task}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>

    <Grid Cursor="Hand">
        
        <ProgressBar Value="50" Background="White" Foreground="#FFB3F7BF" Name="CurrentProgressBar">
        </ProgressBar>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="3" TextAlignment="Center"  VerticalAlignment="Center"
                           Name="ChildCountTextBlock"
                           FontSize="18"/>
                <Image Source="/TasksDK;component/Res/img/treeelements.png" Height="20" Width="15" 
                       Margin="5,10,10,0" VerticalAlignment="Top"/>
            </StackPanel>
        </StackPanel>
            <TextBlock Name ="NameTextBlock"
                       Margin="10,10,50,10"
                       Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=ActualWidth}"
                       HorizontalAlignment="Left"
                    Text="Название задачи" 
                    FontSize="26" 
                    FontWeight="Bold" VerticalAlignment="Center"
                       TextWrapping="WrapWithOverflow"/>
        <Grid.ContextMenu>
            <ContextMenu>
                    <MenuItem Header="Посмотреть подзадачи">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding Main.SelectParentCommand, Source={StaticResource Locator}}" 
                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Path=Task}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </MenuItem>
                    <MenuItem Header="Меню2"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
    </Button>

</UserControl>
